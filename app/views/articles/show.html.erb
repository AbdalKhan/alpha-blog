

<br><h2 align="center"> Title: <%= @article.title %></h2></br>

<div class="row">
	<div class="col-sm-8 offset-sm-2">
		<div class="card">
			<div class="card-header", align="center">
				
				<div align="center">
					<div class="row center" >
						<div class="col-md-6 offset-md-3"></br>
							<% if @article.user %>
								<ul style="list-style: none">
								</br>
									<li>Created By:</li>
									<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
									<li><%= link_to @article.user.username, user_path(@article.user) %> </li>
									<li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
								</ul>
							<% end %>
						</div>

					</div>
				</div>

			<strong>Description:</strong>
				</div>
					<div class="card-body">
						<p class="card-text">
					<div>
						<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
							<%= simple_format(@article.description)%>

							<% if @article.categories.any? %>
								<p> Categories: <%= render @article.categories %> </p>

							<% end %>

							<%= link_to "Edit this article", edit_article_path(@article), 
								class: "btn btn-sm btn-success"%>
							<%= link_to "Delete this article", article_path(@article),method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, 
								class: "btn btn-sm btn-danger"%>
						<% end %>
							<%= link_to "View all articles", articles_path, 
								class: "btn btn-sm btn-primary"%>
					</div>
						</p>
					</div>	
				</div>
			</div>
		</div>
	</div>
</div>
